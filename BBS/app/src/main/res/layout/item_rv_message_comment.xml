<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMainBgLight"
    android:orientation="horizontal"
    android:padding="8dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_title_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textColor="@color/colorTvBlackMain"
            android:textSize="18sp"
            tool:text="谁谁在"
            />

        <TextView
            android:id="@+id/tv_thread_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_title_start"
            android:paddingBottom="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            tool:text="帖子标题"
            />

        <TextView
            android:id="@+id/tv_title_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_thread_title"
            android:paddingBottom="5dp"
            android:textColor="@color/colorTvBlackMain"
            android:textSize="18sp"
            tool:text="中回复了你"
            />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_thread_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorTvBlackMainTint"
            android:textSize="16sp"
            tool:text="这是一条消息"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_datetime_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textColor="@color/colorTvBlackMainTint"
            android:textSize="14sp"
            tool:text="17:20"/>

        <View
            android:id="@+id/red_dot"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_red_dot"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>