<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/selector_foreground_settings"
    app:cardBackgroundColor="@color/colorMainBgLight"
    app:cardCornerRadius="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_hot_avatar"
                    android:layout_width="@dimen/size_avatar_normal"
                    android:layout_height="@dimen/size_avatar_normal"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    tools:src="@drawable/avatar_default_left"
                    android:transitionName="@string/share_avatar"
                    tools:targetApi="lollipop"
                    />

                <TextView
                    android:id="@+id/tv_thread_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_latest"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTvBlackMain"
                    android:textSize="@dimen/size_tv_middle"
                    tools:text="帖子的标题帖子的标题帖子的标题帖子的标题帖子的标"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                >

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:maxLines="1"
                    android:textColor="@color/colorTvBlackMainTint"
                    android:textSize="@dimen/size_tv_username"
                    tools:text="bdpqchen"
                    />

                <TextView
                    android:id="@+id/tv_board_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/selector_foreground_settings"
                    android:orientation="vertical"
                    android:textColor="@color/colorPrimaryCopy"
                    tools:text="[求实焦点]" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_hot_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp"
                    android:paddingTop="6dp"
                    android:textColor="@color/colorTvBlackMainTint"
                    tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hot_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainBgTrans"
            android:orientation="vertical"
            android:padding="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:gravity="end"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_start_latest"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_mode_comment_black_24dp"
                    android:tint="@color/colorTintIconBlack"
                    />

                <TextView
                    android:id="@+id/tv_post_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical"
                    tools:text="12"
                    />

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_thumb_up_white_24dp"
                    android:tint="@color/colorTintIconBlack"
                    />

                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical"
                    tools:text="12"
                    />

                <TextView
                    android:id="@+id/tv_hot_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="32dp"
                    android:gravity="end|center_vertical"
                    android:textSize="@dimen/size_tv_small"
                    tools:text="新回复/发布于 3分钟前"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>