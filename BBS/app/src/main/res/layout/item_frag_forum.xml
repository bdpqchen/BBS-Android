<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_forum_constraint"
            android:layout_width="103dp"
            android:layout_height="180dp"
            android:background="@drawable/flex_item_decoration">

            <ImageView
                android:id="@+id/item_forum_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                android:src="@drawable/entertainment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintBottom_toTopOf="@id/item_forum_name"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/item_forum_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="休闲娱乐"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_forum_icon"
                app:layout_constraintBottom_toBottomOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/item_forum_flex_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            android:background="#ffffff">


        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f2f2f2" />

</LinearLayout>