<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMainBg"
    android:orientation="vertical"
    >

    <include layout="@layout/common_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:text="请尽可能地准确填写以下个人信息，以便我们能快速完成验证"
        android:textColor="@color/material_green_500"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainBgLight"
        android:orientation="vertical"
        android:padding="16dp"
        >


        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="当年的用户名"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/et_stu_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="当年的学号"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="姓名"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/et_cid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="身份证号码"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="邮箱"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textSize="17dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            />

        <EditText
            android:layout_marginTop="4dp"
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/shape_et_multiple"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:gravity="start"
            android:hint="备注:尽可能地描述之前的用户信息"
            />

    </LinearLayout>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/cp_btn_submit_appeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/circular_border_shape"
        android:text="提交申诉信息"
        android:textColor="@color/material_light_white"
        app:spinning_bar_color="@color/colorMainBgLight"
        app:spinning_bar_padding="8dp"
        app:spinning_bar_width="3dp"
        />

</LinearLayout>