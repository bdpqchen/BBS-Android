<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_thread"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="8dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                tools:targetApi="lollipop"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/toolbar_title_thread"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:ellipsize="end"
                            android:focusable="true"
                            android:foreground="@drawable/selector_foreground_settings"
                            android:maxLines="1"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            tools:text="帖子的标题标题帖子的标题标题帖子的标帖子的标题标题题标题帖子的标题标题"
                            tools:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/toolbar_title_board"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="@drawable/selector_foreground_settings"
                            android:maxLines="1"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            tools:text="求实焦点"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:gravity="end"
                        >

                        <ImageView
                            android:id="@+id/iv_stared_thread"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:src="@drawable/ic_star_white_24dp"
                            android:visibility="gone"
                            />

                        <ImageView
                            android:id="@+id/iv_star_thread"
                            android:layout_width="@dimen/icon_size_normal"
                            android:layout_height="@dimen/icon_size_normal"
                            android:src="@drawable/ic_star_border_white_24dp"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/pb_thread_loading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_thread_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_thread_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            />

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_thread_write_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_insert_comment_white_24dp"
        android:visibility="visible"
        app:backgroundTint="@color/material_cyan_800"
        app:layout_behavior="com.twtstudio.bbs.bdpqchen.bbs.commons.support.FABScrollBehavior"
        tools:visibility="visible"
        />
<!--        android:background="@drawable/shape_ll_shade"
-->
    <LinearLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:background="@color/colorMainBgLight"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_dynamic_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorPrimaryCopy"
                android:textSize="12sp"
                tools:text="评论 1 楼 谁谁是"
                />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cb_anonymous_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="匿名"
                android:textColor="@color/colorPrimaryCopy"
                android:visibility="gone"
                tools:visibility="visible"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:baselineAligned="false"
            android:orientation="horizontal"
            >

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:theme="@style/AppTheme.EditText.Register"
                >

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:maxLines="10"
                    android:paddingTop="32dp"
                    />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:paddingEnd="4dp"
                >

                <ImageView
                    android:id="@+id/iv_comment_send"
                    android:layout_width="@dimen/icon_size_normal"
                    android:layout_height="@dimen/icon_size_normal"
                    android:clickable="true"
                    android:src="@drawable/ic_send_white_24dp"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/iv_comment_out"
                    android:layout_width="@dimen/icon_size_normal"
                    android:layout_height="@dimen/icon_size_normal"
                    android:clickable="true"
                    android:src="@drawable/ic_clear_white_24dp"
                    android:tint="@color/colorTvBlackMainTint"
                    android:visibility="visible"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>