<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBg"
    android:orientation="vertical"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBg"
        android:orientation="vertical"
        >

        <include layout="@layout/common_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_select_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorMainBgLight"
                android:paddingEnd="@dimen/padding_start_create_thread"
                android:paddingStart="@dimen/padding_start_create_thread"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="选择板块："
                    android:textColor="@color/colorPrimaryCopy"
                    android:textSize="16sp"
                    />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_select_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:focusable="true"
                    />

            </LinearLayout>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_create_thread"
                android:background="@color/colorMainBgLight"
                android:hint="帖子的标题"
                android:maxLines="5"
                android:minHeight="44dp"
                android:paddingEnd="@dimen/padding_start_create_thread"
                android:paddingStart="@dimen/padding_start_create_thread"
                android:textColorHint="@color/colorPrimaryCopy"
                />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginTop="@dimen/margin_top_create_thread"
                android:background="@color/colorMainBgLight"
                android:gravity="start"
                android:hint="帖子的正文"
                android:inputType="textMultiLine"
                android:minHeight="300dp"
                android:paddingEnd="@dimen/padding_start_create_thread"
                android:paddingStart="@dimen/padding_start_create_thread"
                android:scrollbars="vertical"
                android:textColorHint="@color/colorPrimaryCopy"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="@dimen/margin_top_create_thread"
                android:background="@color/colorMainBgLight"
                >

                <LinearLayout
                    android:id="@+id/ll_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/selector_foreground_settings"
                    android:padding="4dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:text="添加图片到正文"
                        android:textColor="@color/colorPrimaryCopy"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_image_white_24dp"
                        />
                </LinearLayout>

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/cb_anonymous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:paddingEnd="16dp"
                    android:paddingStart="4dp"
                    android:text="匿名"
                    android:textColor="@color/colorPrimaryCopy"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    tools:ignore="RtlHardcoded"
                    tools:visibility="visible"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
